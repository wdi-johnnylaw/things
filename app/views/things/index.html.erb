<h1>Things</h1>

<div id="content">
</div>

<script id="things-template" type="text/x-handlebars-template">
  <ul class="things-list">
    {{#each things}}
      <li class="large-4 medium-6 small-12 columns left">
        <a href="{{truncateURL url}}" class="container large-11 medium-11 small-11 columns">
          <img src="{{image_url}}" alt="{{name}}" title="{{name}}" />
          <span>{{name}}</span>
        </a>
      </li>
    {{/each}}
  </ul>
</script>

<script type="text/javascript">$(function() { loadThingsPage(); });</script>